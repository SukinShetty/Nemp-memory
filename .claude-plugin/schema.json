{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nemp Memory Storage",
  "description": "Schema for memories.json files used by the Nemp plugin",
  "type": "object",
  "required": ["version", "memories"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version for migrations",
      "default": "1.0"
    },
    "memories": {
      "type": "array",
      "description": "Array of memory entries",
      "items": {
        "type": "object",
        "required": ["key", "value", "created", "updated"],
        "properties": {
          "key": {
            "type": "string",
            "description": "Unique identifier for the memory (kebab-case recommended)",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
            "examples": ["user-prefers-bun", "auth-flow-jwt", "project-stack"]
          },
          "value": {
            "type": "string",
            "description": "The memory content - a note, fact, or description",
            "minLength": 1,
            "maxLength": 5000
          },
          "created": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when memory was first created"
          },
          "updated": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when memory was last modified"
          },
          "projectPath": {
            "type": ["string", "null"],
            "description": "Absolute path to the project this memory is associated with (null for global memories)"
          },
          "tags": {
            "type": "array",
            "description": "Optional tags for categorization and filtering",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "source": {
            "type": "string",
            "enum": ["manual", "auto-capture", "import"],
            "description": "How the memory was created",
            "default": "manual"
          },
          "accessCount": {
            "type": "integer",
            "description": "Number of times this memory has been recalled (for relevance ranking)",
            "default": 0
          },
          "lastAccessed": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "When this memory was last recalled"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the memory store",
      "properties": {
        "lastModified": {
          "type": "string",
          "format": "date-time"
        },
        "totalMemories": {
          "type": "integer"
        }
      }
    }
  }
}
